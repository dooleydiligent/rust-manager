{
  "name": "Dioxus Fullstack (Podman-optimized)",
  "image": "docker.io/library/rust:1.90-trixie",
  "remoteUser": "root",
  "postCreateCommand": "sh -e .devcontainer/on_create.sh",
  "forwardPorts": [
    3000,
    8000,
    8080
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "runArgs": [],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "mounts": [
    "source=dioxus-cargo-cache,target=/usr/local/cargo,type=volume",
    "source=/var/run/libvirt/libvirt-sock,target=/var/run/libvirt/libvirt-sock,type=bind,consistency=cached"
  ]
}
